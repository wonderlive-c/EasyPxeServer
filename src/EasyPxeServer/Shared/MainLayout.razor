@inherits LayoutComponentBase
@using Microsoft.FluentUI.AspNetCore.Components

<FluentDesignSystemProvider>
    <FluentToastProvider />
    <FluentDialogProvider />
    <FluentTooltipProvider />
    <FluentMessageBarProvider />
    <FluentMenuProvider />

    <PageTitle>Pxe服务器</PageTitle>

    <div class="page-container">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main class="content">
            <header class="top-bar">
                <FluentLink href="http://www.sct.cn" target="_blank">关于</FluentLink>
            </header>

            <div class="main-content">
                @Body
            </div>
        </main>
    </div>
</FluentDesignSystemProvider>

<style>
    .page-container {
        display: flex;
        height: 100vh;
        overflow: hidden;
    }
    
    .sidebar {
        width: 280px;
        background-color: var(--neutral-fill-card);
        border-right: 1px solid var(--neutral-stroke-divider);
        overflow-y: auto;
    }
    
    .content {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }
    
    .top-bar {
        padding: 1rem 2rem;
        border-bottom: 1px solid var(--neutral-stroke-divider);
        background-color: var(--neutral-fill-card);
    }
    
    .main-content {
        flex: 1;
        padding: 2rem;
        overflow-y: auto;
        background-color: var(--background);
    }
</style>